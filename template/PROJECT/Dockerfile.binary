ARG APP_BIN="${APP}"
ARG REPOSITORY="${GIT_USERNAME}"

# ---- Runtime only --------------------------------------------
FROM debian:trixie-slim AS runtime

ARG REPOSITORY
ARG APP_BIN
ENV APP_BIN="${APP_BIN}"

LABEL org.opencontainers.image.source="${REPOSITORY}"

RUN apt-get update && apt-get install -y --no-install-recommends \
        ca-certificates coreutils sqlite3 && \
    rm -rf /var/lib/apt/lists/*

ARG USER=appuser UID=1001 GID=1001
RUN groupadd --gid "$GID" "$USER" \
 && useradd  --uid "$UID" \
             --gid "$GID" \
             --create-home \
             --shell /usr/sbin/nologin \
             "$USER"

# buildx provides TARGETOS/TARGETARCH automatically
ARG TARGETOS
ARG TARGETARCH

# TARGETARCH is "amd64" or "arm64"
COPY dist/${TARGETOS}-${TARGETARCH}/${APP_BIN} /usr/local/bin/${APP_BIN}

RUN mkdir /data && chown ${USER} /data
VOLUME /data
ENV ROOT_DIR=/data NET_LISTEN_IP=0.0.0.0 NET_LISTEN_PORT=3000

USER $USER

# ENTRYPOINT JSON form doesn't expand vars, so use sh -c
ENTRYPOINT ["/bin/sh", "-c", "exec /usr/local/bin/$APP_BIN"]
